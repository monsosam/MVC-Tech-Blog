<!-- Signup Container -->
<div class="center">
    <div class="form-container">
        <h2>Create an Account</h2>
        
        <form class="form signup-form">
            
            <!-- Name Input -->
            <div class="form-group">
                <label for="name-signup">Name</label>
                <input 
                    type="text" 
                    id="name-signup" 
                    name="name" 
                    required 
                    placeholder="Enter your name"
                />
            </div>
            
            <!-- Email Input -->
            <div class="form-group">
                <label for="email-signup">Email</label>
                <input 
                    type="email" 
                    id="email-signup" 
                    name="email" 
                    required 
                    placeholder="Enter your email"
                />
                <div class="form-helper">Must be a valid email address</div>
            </div>
            
            <!-- Password Input -->
            <div class="form-group">
                <label for="password-signup">Password</label>
                <input 
                    type="password" 
                    id="password-signup" 
                    name="password" 
                    required 
                    placeholder="Enter your password"
                />
                <div class="form-helper">Must be at least 8 characters long</div>
            </div>
            
            <!-- Confirm Password Input -->
            <div class="form-group">
                <label for="confirmPassword-signup">Confirm Password</label>
                <input 
                    type="password" 
                    id="confirmPassword-signup" 
                    name="confirmPassword" 
                    required 
                    placeholder="Confirm your password"
                />
            </div>
            
            <!-- Signup Button -->
            <button type="submit" class="btn-generic" data-original-text="Sign Up">Sign Up</button>
        </form>

        <!-- Login Link -->
        <p class="mt-3">
            Already have an account? 
            <a href="/login" class="login-link">Login here</a>
        </p>
    </div>
</div>

<!-- JavaScript for form handling -->
<script defer src="/js/login.js"></script>