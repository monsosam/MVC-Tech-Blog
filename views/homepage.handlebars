<!-- Blog post feed container -->
<div class="center">
  {{#if blogs.length}}
  
    <!-- Welcome message for logged in users -->
    {{#if logged_in}}
      <h2>Welcome back, {{userName}}!</h2>
    {{/if}}

    <!-- Blog post feed -->
    <div class="blog-feed">
      {{#each blogs}}
      <article class="blog-preview">

        <!-- Title and metadata section -->
        <div class="blog-preview-header">
          <h3 class="blog-title">{{title}}</h3>
          <div class="blog-meta">
            <span class="author">By {{user.name}}</span>
            <span class="date">{{format_datetime date_created}}</span>
          </div>
        </div>

        <!-- Preview content -->
        <div class="blog-preview-content">
          <p>{{truncate content 200}}</p>
          
          <!-- Engagement metrics -->
          <div class="blog-engagement">
            {{#if comments.length}}
              <span>ðŸ’¬ {{comments.length}} {{pluralize "comment" comments.length}}</span>
            {{/if}}
            <a href="/blog/{{id}}" class="read-more">Read full post â†’</a>
          </div>
        </div>
      </article>
      {{/each}}
    </div>
  {{else}}

    <!-- Empty state -->
    <div class="empty-state">
      <h2>Welcome to Tech Blog!</h2>
      <p>Be the first to share your thoughts and ideas.</p>
      {{#if logged_in}}
        <a href="/dashboard/new" class="btn-add">Create First Post</a>
      {{else}}
        <a href="/login" class="btn-generic">Login to Start Posting</a>
      {{/if}}
    </div>
  {{/if}}
</div>