<div class="center">
  <!-- Simplified Blog Post Creation Section -->
  <div id="createPost">
    <!-- Card Header using post-header class for styling -->
    <div class="post-header">
      <h4>Create New Post</h4>
    </div>
    <!-- Card Body for Form, applying form styling directly -->
    <div class="card-body">
      <!-- Blog Creation Form -->
      <form id="createBlog" class="form">
        <!-- Input for Post Title -->
        <div>
          <label for="title">Title</label>
          <input type="text" name="title">
        </div>
        <!-- Textarea for Post Content -->
        <div>
          <label for="content">Content</label>
          <textarea name="content"></textarea>
        </div>
        <!-- Submit Button for Form -->
        <button type="submit" class="btn-generic">Create</button>
      </form>
    </div>
  </div>

  <!-- Button to Trigger New Post Creation -->
  <button id="GrabPost" type="button" class="btn-add">+ New Post</button>
</div>

<!-- Link to JavaScript file for handling post creation -->
<script src="./../../public/js/createPost.js"></script>