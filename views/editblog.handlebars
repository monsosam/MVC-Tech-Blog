<!-- Card container for editing a post -->
<div id="editPost" class="card my-3">
    <!-- Card header with the title 'Edit Post' -->
    <div class="card-header navbar-dark bg-dark d-flex justify-content-between align-items-center">
        <h4>Edit Post</h4>
    </div>

    <!-- Card body containing the edit form -->
    <div
        class="card-body text-center bg-info bg-opacity-50 text-dark w-100 m-auto p-auto border border-dark border-top-0 border-4 rounded-bottom">
        <!-- Form for updating or deleting the blog post -->
        <form id="updateBlog" data-blogid="{{blog.id}}">
            <!-- Input field for the post title -->
            <div class="mb-3 mx-2 text-start text-dark">
                <label for="title" class="form-label">Title</label>
                <input id="title" type="text" class="form-control" name="title" value="{{blog.title}}">
            </div>

            <!-- Textarea for the post content -->
            <div class="mb-3 mx-2 text-start text-dark">
                <label for="content" class="form-label">Content</label>
                <textarea id="content" type="text" class="form-control" name="content">{{blog.content}}</textarea>
            </div>

            <!-- Submit button for updating the post -->
            <button type="submit" class="btn btn-primary w-75 mb-3">Update Post</button>

            <!-- Button for deleting the post -->
            <button type="submit" class="btn btn-primary w-75">Delete</button>
        </form>
    </div>
</div>

<!-- Link to JavaScript file for handling edit operations -->
<script src="/js/edit.js"></script>