<!-- Card container for editing a post, simplified to use CSS styling -->
<div id="editPost">
  <!-- Card header with the title 'Edit Post', using post-header class -->
  <div class="post-header">
    <h4>Edit Post</h4>
  </div>

  <!-- Card body containing the edit form, simplified styling -->
  <div class="post-content">
    <!-- Form for updating or deleting the blog post -->
    <form id="updateBlog" data-blogid="{{blog.id}}">
      <!-- Input field for the post title -->
      <div>
        <label for="title">Title</label>
        <input id="title" type="text" name="title" value="{{blog.title}}">
      </div>

      <!-- Textarea for the post content -->
      <div>
        <label for="content">Content</label>
        <textarea id="content" name="content">{{blog.content}}</textarea>
      </div>

      <!-- Submit button for updating the post, using btn-generic for styling -->
      <button type="submit" class="btn-generic">Update Post</button>

      <!-- Button for deleting the post, also using btn-generic for styling -->
      <button type="button" class="btn-generic">Delete</button>
    </form>
  </div>
</div>

<!-- Link to JavaScript file for handling edit operations -->
<script src="/js/edit.js"></script>