{{!-- Display all posts on the homepage --}}
{{#each posts as |post|}}
<div class="post-container mb-4 card border-dark">
  <div class="row">
    <div class="col-md-12 d-flex justify-content-between align-items-center primary">
      <h2>
        <a class="text-color" href="/post/{{post.id}}">{{post.title}}</a>
      </h2>
      <p class="float-right">Posted by {{post.user.name}} on {{post.date_created}}</p>
    </div>
    <div class="col-md-12">
      <p>{{post.content}}</p>
    </div>
  </div>
</div>
{{/each}}