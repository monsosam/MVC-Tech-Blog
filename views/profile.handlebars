<div class="col-md-12">
    <h3 class="mb-4">My Posts:</h3>
    {{!-- display posts made by logged in user --}}
    {{#each posts as |post|}}
    <div class="row mb-4 card border-dark">
        <div class="col-md-12 d-flex justify-content-between align-items-center primary">
            <h2>
                <a class="text-color" href="/post/{{post.id}}">{{post.title}}</a>
            </h2>
            <p class="float-right">
                Posted on {{format_date post.date_created}}
                {{!-- ability to edit/delete posts --}}
                <button class="primary ml-2 mt-1 edit-button" data-post-id="{{post.id}}">Edit</button>
                <button class="delete ml-2 mt-1 delete-button" data-id="{{post.id}}">Delete</button>
            </p>
        </div>
        <div class="col-md-12">
            <p>
                {{post.content}}
            </p>
        </div>
    </div>
    {{/each}}
    <button id="new-button" class="primary">New Post</button>

    <!-- Create Post Modal -->
    <div id="createPostModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <form class="mx-auto post-form">
                <label>Title</label>
                <input type="text" id="title-post" class="form-control mb-2">
                <label>Content</label>
                <input type="text" id="content-post" class="form-control mb-2">
                <input type="submit" value="Create" class="btn btn-primary mb-3" id="newPostButton">
            </form>
        </div>
    </div>

    <!-- Edit Post Modal -->
    <div id="editPostModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <form class="mx-auto post-form">
                <label>Edit Title</label>
                <input type="text" id="edit-title-post" class="form-control mb-2">
                <label>Edit Content</label>
                <input type="text" id="edit-content-post" class="form-control mb-2">
                <input type="submit" value="Save Changes" class="btn btn-primary mb-3" id="saveChangesButton">
            </form>
        </div>
    </div>

</div>

<script src="/profile.js"></script>